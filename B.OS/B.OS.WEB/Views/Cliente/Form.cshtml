@model B.OS.WEB.Models.TabCliente
@{
	Layout = null;
}

<div class="mx-auto p-3" style="width: 700px;"> 
	<div class="alert alert-danger alert-dismissible fade show" roel="alert" id="successAlertForm" style="display:none;">
		<div id="alertaRetornoForm"></div>
		<button type="button" class="btn=close" data-bs-dismiss="alert" aria-label="Fechar"></button>
	</div>

	<form class="needs-validation" novalidate id="myForm">
		@* <input type="hidden" value="@Model.Codigo" id="Id" name="Id"/>	 *@	
		<input type="hidden" value="@Model.DataCadastro" id="DataCadastro" name="DataCadastro" />
		<input type="hidden" id="UrlRedirect" name="UrlRedirect"/>
		<input type="hidden" value="@Model.IncluirAlterar" id="IncluirAlterar" name="IncluirAlterar"/>

		<div class="row g-3">
			@if(Model.Codigo != null || Model.Codigo != 0){
				<div class="col-12">
					<label for="codigo" class="form-label">Código Cliente</label>
					<input type="text" class="form-control" id="Codigo" name="codigo" value="@Model.Codigo" />
				</div>
			}			
			<div class="col-12">
				<label for="tipo" class="form-label">Tipo:</label>
				<input type="text" class="form-control" id="Tipo" name="tipo" value="@Model.Tipo" required />
				<div class="invalid-feedback">
					Campo Obrigatório
				</div>
			</div>
			<div class="col-12">
				<label for="nome" class="form-label">Nome:</label>
				<input type="text" class="form-control" id="Nome" name="nome" value="@Model.Nome" required />
				<div class="invalid-feedback">
					Campo Obrigatório
				</div>
			</div>
			<div class="col-12">
				<label for="documento" class="form-label">Documento:</label>
				<input type="text" class="form-control" id="Documento" name="documento" value="@Model.Documento" required />
				<div class="invalid-feedback">
					Campo Obrigatório
				</div>
			</div>
			<div class="col-12">
				<label for="contato" class="form-label">Contato:</label>
				<input type="text" class="form-control" id="Contato" name="contato" value="@Model.Contato" />
			</div>
			<div class="col-12">
				<label for="endereco" class="form-label">Endereço:</label>
				<input type="text" class="form-control" id="Endereco" name="endereco" value="@Model.Endereco" />
			</div>
			<div class="col-12">
				<label for="cep" class="form-label">CEP:</label>
				<input type="text" class="form-control" id="CEP" name="cep" value="@Model.CEP" />
			</div>
			<div class="col-12">
				<label for="cidade" class="form-label">Cidade:</label>
				<input type="text" class="form-control" id="Cidade" name="cidade" value="@Model.Cidade" />
			</div>
			<div class="col-12">
				<label for="estado" class="form-label">Estado:</label>
				<input type="text" class="form-control" id="Estado" name="estado" value="@Model.Estado" />
			</div>
			<div class="col-12">
				<label for="telefone" class="form-label">Telefone:</label>
				<input type="text" class="form-control" id="Telefone" name="telefone" value="@Model.Telefone" />
			</div>
			<div class="col-12">
				<label for="whatsapp" class="form-label">WhatsApp:</label>
				<input type="text" class="form-control" id="Whatsapp" name="whatsapp" value="@Model.WhatsApp" required />
				<div class="invalid-feedback">
					Campo Obrigatório
				</div>
			</div>
			<div class="col-12">
				<label for="e-mail" class="form-label">Email:</label>
				<input type="text" class="form-control" id="Email" name="e-mail" value="@Model.Email" required />
				<div class="invalid-feedback">
					Campo Obrigatório
				</div>
			</div>
		</div>
		<hr class="my-4"/>
		<button class="w-100 btn btn-primary btn-lg" type="submit">Salvar</button>
	</form>
</div>